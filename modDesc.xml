<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<modDesc descVersion="47">
	<author>sperrgebiet</author>
	<version>0.9.1.7</version>
	<title>Tardis Teleport</title>
	<description>
		<en>
			<![CDATA[
			This is a revamp of the good old Tardis from FS17.
			
			For beginners: With Tardis you can teleport yourself or your vehicles to any location on the map.
			Besides that it has a couple of additional functionality. See below.
			
			More Details: https://github.com/sperrgebiet/FS19_Tardis
			]]>
		</en>
		<de>
			<![CDATA[
			Dies ist eine Reinkarnation von Tardis aus LS17
			Für Neueinsteiger: Mit Tardis kannst du dich selbst oder eines deiner Fahrzeuge zu jeder Lokation teleportieren.
			
			Mehr Details: https://github.com/sperrgebiet/FS19_Tardis
			]]>
		</de>
	</description>
	<iconFilename>icon.dds</iconFilename>
	<multiplayer supported="true" />

	<extraSourceFiles>
		<sourceFile filename="RegisterSpecialization.lua" />
	</extraSourceFiles>	
	
	<registerSpecializations debugPriority="0">
		<registerSpecialization name="tardis" className="Tardis" filename="Tardis.lua" searchedSpecializations="Enterable"/>
	</registerSpecializations>	


	<actions>
		<action name="tardis_showTardisCursor" axisType="HALF" />
		<action name="tardis_resetVehicle" axisType="HALF" />
		<action name="tardis_useHotspot1" axisType="HALF" />
		<action name="tardis_useHotspot2" axisType="HALF" />
		<action name="tardis_useHotspot3" axisType="HALF" />
		<action name="tardis_useHotspot4" axisType="HALF" />
		<action name="tardis_useHotspot5" axisType="HALF" />
		<action name="tardis_useHotspot6" axisType="HALF" />
		<action name="tardis_useHotspot7" axisType="HALF" />
		<action name="tardis_useHotspot8" axisType="HALF" />
		<action name="tardis_useHotspot9" axisType="HALF" />
		<action name="tardis_deleteHotspot" axisType="HALF" />
	</actions>
	<inputBinding>	
		<actionBinding action="tardis_showTardisCursor">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lalt KEY_t" index="1" />
		</actionBinding>
		<actionBinding action="tardis_resetVehicle">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lalt KEY_backspace" index="1" />
		</actionBinding>
		<actionBinding action="tardis_useHotspot1">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lshift KEY_lalt KEY_KP_1" index="1" />
		</actionBinding>
		<actionBinding action="tardis_useHotspot2">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lshift KEY_lalt KEY_KP_2" index="1" />
		</actionBinding>
		<actionBinding action="tardis_useHotspot3">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lshift KEY_lalt KEY_KP_3" index="1" />
		</actionBinding>
		<actionBinding action="tardis_useHotspot4">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lshift KEY_lalt KEY_KP_4" index="1" />
		</actionBinding>
		<actionBinding action="tardis_useHotspot5">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lshift KEY_lalt KEY_clear" index="1" />
		</actionBinding>
		<actionBinding action="tardis_useHotspot6">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lshift KEY_lalt KEY_KP_6" index="1" />
		</actionBinding>
		<actionBinding action="tardis_useHotspot7">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lshift KEY_lalt KEY_KP_7" index="1" />
		</actionBinding>
		<actionBinding action="tardis_useHotspot8">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lshift KEY_lalt KEY_KP_8" index="1" />
		</actionBinding>
		<actionBinding action="tardis_useHotspot9">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lshift KEY_lalt KEY_KP_9" index="1" />
		</actionBinding>
		<actionBinding action="tardis_deleteHotspot">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lshift KEY_lalt KEY_backspace" index="1" />
		</actionBinding>	
    </inputBinding>	
	
